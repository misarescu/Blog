---
const { postLink, imgSrc, imgAlt, title, preview } = Astro.props;
import { Image } from "astro:assets";
---

<a
  href={postLink}
  class="not-prose dark:bg-slate-600 bg-slate-100 md:shadow-xl shadow-md min-w-full flex flex-col items-center card-highlight"
>
  <!-- <img src={imgSrc} class="bg-slate-50 w-full md:h-40 h-60" /> -->
  <Image
    src={imgSrc}
    format="jpeg"
    alt={imgAlt}
    loading="lazy"
    style="aspect-ratio:3.5; object-fit:cover;"
    width="100"
    height="100"
    class="bg-slate-50 w-full"
  />
  <!-- <div class="dark:bg-slate-950 bg-slate-50 w-full md:h-40 h-60">
    img source: {imgSrc}
  </div> -->
  <div class="md:p-8 p-4">
    <h2 class="text-center lg:text-3xl md:text-2xl text-xl font-extrabold">
      {title}
    </h2>
    <p>{preview}...</p>
  </div>
</a>
