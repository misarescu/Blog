---
const { postLink, imgSrc, imgAlt, title, preview, tags } = Astro.props;
import { Image } from "astro:assets";
---

<a
  href={postLink}
  class="not-prose dark:bg-slate-600 bg-slate-100 md:shadow-xl shadow-md min-w-full flex flex-col items-center card-highlight"
>
  <Image
    src={imgSrc}
    format="jpeg"
    alt={imgAlt}
    loading="lazy"
    style="aspect-ratio:3.5; object-fit:cover;"
    width="100"
    height="100"
    class="bg-slate-50 w-full"
  />
  <div class="md:p-8 p-4">
    <h2 class="text-center lg:text-3xl md:text-2xl text-xl font-extrabold">
      {title}
    </h2>
    <p>{preview}...</p>
    <br />
    <ul
      class="flex flex-row flex-wrap justify-center lg:space-x-4 space-x-2 md:text-sm text-xs m-auto dark:text-sky-300 text-sky-700"
    >
      {tags.map((t: string) => <li>{t}</li>)}
    </ul>
  </div>
</a>
